<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}

        <style>
            body {
                margin: 0;
                padding: 0;
                font-family: Arial, sans-serif;
                background-color: #36404A;
            }

            #sidebar {
                width: 100%;
                background-color: #0DFF92;
            }

            #sidebar ul {
                display: flex;
                justify-content: space-around;
                list-style: none;
                margin: 0;
                padding: 10px 20px;
            }

            #sidebar ul div li, .logout{
                padding: 5px 10px;
                font-size: 28px;
                font-weight: bold;
            }

            #sidebar ul div li a, .logout a{
                text-decoration: none;
                color: #36404A
            }

            #sidebar ul div li a:hover{
                color: #2440b8
            }

            .logout a:hover {
                color: #ff4c4c;
            }

            #sidebar ul div {
                display: flex;
                justify-content: space-around;
            }

            .logout {
                margin-left: 200px;
            }

            .outName {
                font-size: 22px;
                color: #1755af;
                margin-left: 100px;
            }
        </style>
    </head>
    <body>
    <div id="sidebar">
        {% block sidebar %}
            <ul>
                <div>
                    <li><a href="/about">About</a></li>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="outName">Привет! {{ app.user.name }}</li>
                    {% else %}
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Register</a></li>
                    {% endif %}
                </div>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="logout"><a href="/logout">Logout</a></li>
                {% endif %}
            </ul>
        {% endblock %}
    </div>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
