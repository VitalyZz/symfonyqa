{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <style>
        .loginForm {
            margin-left: 20px;
            margin-top: 100px;
            display: flex;
            flex-direction: column;
            width: 300px;
            height: 300px;
            justify-content: center;
        }

        .header {
            text-align: center;
            color: #2aff00;
        }

        .labelEmail, .labelPassword {
            color: #00bcff;
            font-size: 25px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .inputEmail, .inputPassword {
            margin-bottom: 15px;
            padding: 5px;
            border: 3px solid #fff;
            background-color: #27141461;
            color: #fff;
            font-size: 22px;
            font-weight: bold;
        }

        .btn-login {
            font-size: 25px;
            font-weight: 700;
            padding: 10px;
            border: none;
            background-color: #7fff5f;
            cursor: pointer;
        }

        .btn-login:hover {
            background-color: #47ff1e;
        }

        .alert-danger {
            color: red;
            font-size: 22px;
            background-color: #000;
            border: 3px solid #000;
            margin-top: 50px;
            text-align: center;
            padding: 10px;
        }
    </style>
<form method="post" class="loginForm">

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal header">Please sign in</h1>
    <label for="inputEmail" class="labelEmail" id="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control inputEmail" required autofocus>
    <label for="inputPassword" class="labelPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control inputPassword" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary btn-login" type="submit">
        Sign in
    </button>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
</form>
{% endblock %}
